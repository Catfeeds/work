@import "compass/reset";
@import "compass/css3";
@import "./includes/common";
html {
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
    font-family: "Microsoft YaHei", "Helvetica Neue", Helvetica, STHeiTi, sans-serif;
    width: 100%;
    height: 100%;
    font-size: 100px;
    overflow-x: hidden;
    overflow: auto;
    background-color: #f5f5f9;
    line-height: 1.375;
}

body {
    @include user-select(none);
    margin: 0 auto;
    width: 100%;
    height: 100%;
    max-width: 750px;
    font-size: 0.24rem;
    text-align: center;
    background-color: #f5f5f9;
    font-size: 0.12rem;
    color: #000;
    @include box-sizing(border-box);
}

input {
    -webkit-box-sizing: border-box;
}

a,
input,
lable,
button,
div {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    outline: none;
}

a,
a:hover,
a:visited {
    text-decoration: none;
    color: #000;
}

.hide {
    display: none !important;
}

input::-ms-input-placeholder {
    text-align: center;
    color: #a9a9a9;
}

input::-webkit-input-placeholder {
    text-align: center;
    color: #a9a9a9;
}

img {
    width: 100%;
}

.loading {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: #fff;
    z-index: 99999;
}

.loading-icon {
    width: 0.6rem;
    height: 0.6rem;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -0.3rem;
    margin-left: -0.3rem;
    background: url(/static/images/loading.png) no-repeat;
    -webkit-background-size: cover;
    background-size: cover;
    -webkit-animation: rotate360 1s linear 0s infinite;
    -moz-animation: rotate360 1s linear 0s infinite;
    animation: rotate360 1s linear 0s infinite;
    -webkit-transform-origin: 50% 50%;
    -moz-transform-origin: 50% 50%;
    -ms-transform-origin: 50% 50%;
    -o-transform-origin: 50% 50%;
    transform-origin: 50% 50%;
    z-index: 99;
}

@-moz-keyframes rotate360 {
    from {
        transform: rotateZ(0deg);
    }
    to {
        transform: rotateZ(360deg);
    }
}

@keyframes rotate360 {
    from {
        -webkit-transform: rotateZ(0deg);
        transform: rotateZ(0deg);
    }
    to {
        -webkit-transform: rotateZ(360deg);
        transform: rotateZ(360deg);
    }
}

@-webkit-keyframes rotate360 {
    from {
        -webkit-transform: rotateZ(0deg);
    }
    to {
        -webkit-transform: rotateZ(360deg);
    }
}

img {
    width: 100%;
}

.main {
    position: relative;
    min-height: 100%;
}

.icon-back {
    display: inline-block;
    width: 30*0.005+rem;
    height: 30*0.005+rem;
    border-bottom: 2px solid #fff;
    border-left: 2px solid #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -15*0.005+rem;
    ;
    margin-top: -15*0.005+rem;
    ;
    @include transform(rotateZ(45deg));
}

.header {
    width: 100%;
    height: 88*0.005+rem;
    background-color: #009ff0;
    text-align: center;
    line-height: 88*0.005+rem;
    .center {
        // width: 100%;
        @include box-sizing(border-box);
        margin: 0 100*0.005+rem;
        position: relative;
        font-size: 0.18rem;
        color: #fff;
    }
    .left,
    .right {
        width: 100*0.005+rem;
        height: 88*0.005+rem;
        position: absolute;
        top: 0;
    }
    .left {
        left: 0;
    }
    .right {
        right: 0;
    }
}

.user-comment-container {
    position: absolute;
    top: 0.44rem;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
}

#wrapper {
    position: absolute;
    width: 100%;
    height: 100%;
    // overflow:auto!important;
}

#scroller {
    position: relative;
    min-height: 100%;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    padding: 0;
}

#pullUp {
    position: relative;
    background: #fff;
    height: 0.4rem;
    line-height: 0.4rem;
    padding: 0.05rem 0;
    font-size: 0.12rem;
    color: #888;
}

#pullUp .pullUpIcon {
    display: inline-block;
    vertical-align: middle;
    width: 0.3rem;
    height: 0.3rem;
    background: url(../images/pull-icon@2x.png) 0 0 no-repeat;
    background-size: 0.3rem auto;
    -webkit-transition-property: -webkit-transform;
    -webkit-transition-duration: 250ms;
    margin-right: 0.05rem;
}

#pullUp .pullUpIcon {
    -webkit-transform: rotate(-180deg) translateZ(0);
}

#pullUp.flip .pullUpIcon {
    -webkit-transform: rotate(0deg) translateZ(0);
}

#pullUp.loadMore .pullUpIcon {
    background-position: 0 100%;
    -webkit-transform: rotate(0deg) translateZ(0);
    -webkit-transition-duration: 0ms;
    -webkit-animation-name: loadMore;
    -webkit-animation-duration: 2s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-timing-function: linear;
}

@-webkit-keyframes loadMore {
    from {
        -webkit-transform: rotate(0deg) translateZ(0);
    }
    to {
        -webkit-transform: rotate(360deg) translateZ(0);
    }
}

ul.user-comment-ul {
    width: 100%;
    padding-left: 30*0.005+rem;
    @include box-sizing(border-box);
}

li.user-comment-li {
    position: relative;
    width: 100%;
    min-height: 140*0.005+rem;
    padding-top: 30*0.005+rem;
    padding-bottom: 30*0.005+rem;
    @include box-sizing(border-box);
    padding-left: 100*0.005+rem;
    border-bottom:1px solid #e6e6e6;
    .avatar {
        width: 80*0.005+rem;
        height: 80*0.005+rem;
        border-radius: 50%;
        overflow: hidden;
        position: absolute;
        top: 30*0.005+rem;
        left: 0;
        background-color: #eee;
        @extend %useBackground;
        i {
            display: block;
            width: 100%;
            height: 100%;
            @extend %useBackground;
        }
    }
    .msg {
        width: 100%;
        @include box-sizing(border-box);
        padding-top: 50*0.005+rem;
        padding-right: 30*0.005+rem;
        position: relative;
        font-size: 0.15rem;
        color: #222;
        line-height: 1.6;
        text-align: left;
        word-break: break-all;
    }
    .photo {
        width: 100%;
        @include box-sizing(border-box);
        padding-top: 30*0.005+rem;
        padding-right: 30*0.005+rem;
        ul.photo-ul {
            width: 100%;
            text-align: left;
        }
        li.photo-li {
            display: inline-block;
            width: 100*0.005+rem;
            height: 100*0.005+rem;
            margin-right: 10*0.005+rem;
            margin-bottom: 10*0.005+rem;
            position: relative;
            background-color: #f4f4f4;
            @include box-sizing(border-box);
            overflow: hidden;
            img {
                position: absolute;
                top: 50%;
                left: 50%;
                @include transform(translate3d(-50%, -50%, 0));
            }
        }
    }
    .detail-stars {
        position: absolute;
        top: 0;
        left: 0;
    }
    .date {
        position: absolute;
        top: 0;
        right: 30*0.005+rem;
        color: #aaa;
    }
}

.more {
    display: block;
    width: 100%;
    height: 100*0.005+rem;
    line-height: 100*0.005+rem;
    color: #666;
    font-size: 0.15rem;
    position: relative;
}

.detail-stars i {
    width: 0.12rem;
    height: 0.12rem;
    display: inline-block;
    margin-right: 0.05rem;
}

.nm-photo-album {
    width: 100%;
    height: 100%;
    background-color: #000;
    position: fixed;
    z-index: 9999;
    top: 0;
    left: 0;
    overflow: hidden;
    .title-bar {
        width: 100%;
        height: 30px;
        line-height: 30px;
        position: absolute;
        top: 0;
        left: 0;
        background-color: rgba(255, 255, 255, 0.3);
        color: #fff;
        z-index: 999999;
        .close {
            width: 60px;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 99999;
            i.icon-back {
                display: inline-block;
                width: 10px;
                height: 10px;
                border-bottom: 2px solid #fff;
                border-left: 2px solid #fff;
                position: absolute;
                top: 50%;
                left: 50%;
                margin-left: -15px;
                margin-top: -5px;
                @include transform(rotateZ(45deg));
            }
        }
        .title {
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            @include box-sizing(border-box);
            padding-left: 60px;
            padding-right: 60px;
        }
        .number {
            width: 60px;
            height: 100%;
            position: absolute;
            top: 0;
            right: 0;
        }
    }
    ul {
        width: 100%;
        height: 100%;
    }
    li {
        width: 100%;
        height: 100%;
        position: relative;
        float: left;
        overflow: hidden;
        div {
            // width: 50%;
            // height: 50%;
            position: absolute;
            top: 50%;
            left: 50%;
            @include transform(translate3d(-50%, -50%, 0));
        }
    }
}