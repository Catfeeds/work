@import '../sass/base';
.signup-msg-box{
  position:absolute;
  width: 100%;
  min-height: 100%;
  background-color:rgba(0,0,0,0.2);
  top:0;
  left:0;
}
.signup-msg-content{
  box-sizing:border-box;
  width: pxToRem(550px);
  padding:pxToRem(40px);
  border-radius: pxToRem(40px);
  background-color: #ffeb01;
  position: relative;
  margin:pxToRem(140px) auto;
  border:2px solid #000;
  word-break:break-all;
  word-wrap:break-word;
}
.signup-msg-title{
  font-size: pxToRem(36px);
}
.signup-msg-p{
  padding-top: pxToRem(40px);
  text-align: left;
}
.signup-msg-close{
  width: pxToRem(52px);
  height: pxToRem(52px);
  line-height: pxToRem(52px);
  background-color: #000;
  border-radius: 50%;
  color:#fff;
  text-align: center;
  position: absolute;
  top:pxToRem(18px);
  right:pxToRem(18px);
}