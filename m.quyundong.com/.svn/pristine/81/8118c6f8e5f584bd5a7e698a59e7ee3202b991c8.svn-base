@import "compass/reset";
@import "compass/css3";
@import "../../../../sass-lib/header";

html {
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  font-family: "Microsoft YaHei", "Helvetica Neue", Helvetica, STHeiTi, sans-serif;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow: auto;
  background-color: #fff;
  line-height: 1.375;
}

body {
  margin: 0 auto;
  height: 100%;
  width: 100%;
  text-align: center;
  overflow: hidden;
}

a, a:hover, a:visited {
  text-decoration: none;
  color: #fff;
}

.loading {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: white;
}

.loading-icon {
  width: 60px;
  height: 60px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -30px;
  margin-left: -30px;
  background: url(/static/images/loading.png) no-repeat;
  -webkit-background-size: cover;
  background-size: cover;
  -webkit-animation: rotate360 1s linear 0s infinite;
  -moz-animation: rotate360 1s linear 0s infinite;
  animation: rotate360 1s linear 0s infinite;
  -webkit-transform-origin: 50% 50%;
  -moz-transform-origin: 50% 50%;
  -ms-transform-origin: 50% 50%;
  -o-transform-origin: 50% 50%;
  transform-origin: 50% 50%;
  z-index: 99;
}

@-moz-keyframes rotate360 {
  from {
    transform: rotateZ(0deg);
  }
  to {
    transform: rotateZ(360deg);
  }
}
@keyframes rotate360 {
  from {
    -webkit-transform: rotateZ(0deg);
    transform: rotateZ(0deg);
  }
  to {
    -webkit-transform: rotateZ(360deg);
    transform: rotateZ(360deg);
  }
}
@-webkit-keyframes rotate360 {
  from {
    -webkit-transform: rotateZ(0deg);
  }
  to {
    -webkit-transform: rotateZ(360deg);
  }
}

.hide {
  display: none !important;
}
.main{
  width:100%;
  height:100%;
  position:relative;
  .money{
    font-size: 0.15rem;
    color: #fff;
    text-align: left;
    width: 100%;
    height: 100*0.005+rem;
    line-height: 100*0.005+rem;
    background-color: $quyundongBlue;
    margin-top: -1px;
    @include box-sizing(border-box);
    padding:0 30*0.005+rem;
    position: relative;
    .total-price{
      display: inline-block;
      height: 100*0.005+rem;
      position: absolute;
      top:0;
      right:30*0.005+rem;
    }
  }
  .no-msg{
    width: 100%;
    padding-top: 100*0.005+rem;
    color:#666;
    font-size: 0.15rem;
  }
  .scroll{
    width: 100%;
    position: absolute;
    top:0.94rem;
    bottom:0;
  }
  ul.history-list{
    width: 100%;
    min-height: 6rem;
    font-size: 0.12rem;
    padding-left: 30*0.005+rem;
    position: relative;
    background-color: #fff;
    @include box-sizing(border-box);
    .history-list-li{
      position: relative;
      width: 100%;
      background-color: #fff;
      height: 120*0.005+rem;
      text-align: left;
      .type,.date{
        font-size: 0.12rem;
        padding-top: 20*0.005+rem;
        color:#666;
      }
      .price{
        line-height:120*0.005+rem;
        height: 120*0.005+rem;
        position: absolute;
        top:0;
        right:30*0.005+rem;
        font-size: 0.15rem;
        color:#222;
        text-align: right;
        &.add{
          color:$quyundongBlue;
        }
      }
    }
  }
}
.nm-tips{
  width: 0.8rem;
  font-size: 0.12rem;
  padding: 0.1rem;
  text-align: center;
  background-color: rgba(0,0,0,0.7);
  color:#fff;
  bottom:0.2rem;
  left:50%;
  margin-left: -0.4rem;
  position: fixed;
  border-radius: 3px;
  opacity: 1;
  @include transition(opacity 2s linear 0s);
}
.opacity0{
  opacity: 0;
}

#wrapper {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: auto;
}

#scroller {
    position: relative;
    min-height: 100%;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    padding: 0;
}

#pullUp {
    position: relative;
    background: #fff;
    height: 0.4rem;
    line-height: 0.4rem;
    padding: 0.05rem 0;
    font-size: 0.12rem;
    color: #888;
}

#pullUp .pullUpIcon {
    display: inline-block;
    vertical-align: middle;
    width: 0.3rem;
    height: 0.3rem;
    background: url(../images/pull-icon@2x.png) 0 0 no-repeat;
    background-size: 0.3rem auto;
    -webkit-transition-property: -webkit-transform;
    -webkit-transition-duration: 250ms;
    margin-right: 0.05rem;
}

#pullUp .pullUpIcon {
    -webkit-transform: rotate(-180deg) translateZ(0);
}

#pullUp.flip .pullUpIcon {
    -webkit-transform: rotate(0deg) translateZ(0);
}

#pullUp.loadMore .pullUpIcon {
    background-position: 0 100%;
    -webkit-transform: rotate(0deg) translateZ(0);
    -webkit-transition-duration: 0ms;
    -webkit-animation-name: loadMore;
    -webkit-animation-duration: 2s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-timing-function: linear;
}

@-webkit-keyframes loadMore {
    from {
        -webkit-transform: rotate(0deg) translateZ(0);
    }
    to {
        -webkit-transform: rotate(360deg) translateZ(0);
    }
}