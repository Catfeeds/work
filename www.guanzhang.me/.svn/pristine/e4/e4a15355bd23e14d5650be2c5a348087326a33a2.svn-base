@import "compass/reset";
@import "compass/css3";


@import "../../../../../../m.quyundong.com/public/sass-lib/base";
@import "../../../../../../m.quyundong.com/public/sass-lib/loading";
html,body{
  width: 100%;
}
.loading-icon{
  background-image: url(/images/mobile/index/loading.png);
}
.main{
  width: 100%;
  h2{
    font-size: pxToRem(40px);
    color:#000;
    padding-top: pxToRem(100px);
    margin-bottom: pxToRem(40px);
    text-align: center;
  }
  p{
    font-size: pxToRem(26px);
    color:#000;
    line-height: 1.75;
    width: 92%;
    margin: 0 auto;
  }
  img{
    width: 100%;
  }
  .pic{
    width: 100%;
    padding-top:pxToRem(80px);
    padding-bottom: pxToRem(100px);
  }
}
.page1{
  width: 100%;
  height: pxToRem(500px);
  background:transparent url('/images/mobile/index/1.png') left top no-repeat;
  @include background-size(cover);
  text-align: center;
  h2{
    padding-top: pxToRem(140px);
    color:#fff;
  }
  p{
    color:#fff;
  }
}
.page2{
  width: 100%;
  text-align: left;
}
.page3{
  width: 100%;
  background-color: #e9ebf0;
}
.page6{
  h2{
    border-top: 1px solid #e0e0e0;
  }
  ul{
    width: 100%;
    padding:pxToRem(80px) 0 pxToRem(100px);
    font-size: 0;
  }
  li{
    width: 24.5%;
    display: inline-block;
    .t{
      width: pxToRem(92px);
      margin:0 auto;
      margin-bottom: pxToRem(20px);
    }
    .b{
      text-align: center;
      font-size: pxToRem(24px);
      color:#000;
    }
  }
}
.page7{
  margin-bottom: pxToRem(200px);
}
.foot{
  width: 100%;
  height:pxToRem(120px);
  border-top: 1px solid #e0e0e0;
  background-color: #f9f9f9;
  position: fixed;
  bottom:0;
  left:0;
  right:0;
  a{
    display: block;
    width: pxToRem(690px);
    height: pxToRem(90px);
    margin:pxToRem(15px) auto;
    line-height: pxToRem(90px);
    font-size: pxToRem(36px);
    color:#fff;
    background-color: #2b6ffe;
    border-radius: pxToRem(90px);
  }
}