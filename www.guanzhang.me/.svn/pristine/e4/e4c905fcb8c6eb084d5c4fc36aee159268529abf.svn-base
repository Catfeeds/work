@import 'compass/css3';

html,
body {
    position: relative;
    height: 100%;
}


#fullpage {
    position: relative;
    width: 100%;
    height: 100.1%;
    overflow: hidden;
    .container {
        position: relative;
    }
}

.page {
    letter-spacing: 0.3em;
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 1;
    overflow: hidden;
    @include transform(translate3d(0,0,0));
    .wrap {
        width:1180px;
        height: 100%;
        position: relative;
        margin: 0 auto;
    }
}

.menu {
    position: fixed;
    top: 50%;
    margin-top: -100px;
    right: 10px;
    z-index: 10;
    ul {
        li {
            width: 6px;
            height: 6px;
            padding: 8px;
            margin-bottom: 4px;
            cursor: pointer;
            span {
                display: block;
                width: 6px;
                height: 6px;
                border-radius: 100%;
                background: #777;
            }
            &.cur {
                
                span {
                    background:#2b6ffa;
                }
            }
            &:last-of-type{
              display: none;
            }
        }
    }
}


.page{
  p{
    font-weight: 100;
  }
  text-align: center;
  .text-left{
    text-align: left;
  }
  h2{
    font-size: 44px;
    padding-bottom: 10px;
    position: relative;

  }
  h3{
    font-weight: 300;
    font-size: 36px;
  }
  .sp{
    color:#000;
  }
  p{
    font-size: 18px;
    padding-bottom: 18px;
  }
  .btn{
    display: inline-block;
    line-height: 36px;
    font-size: 18px;
    padding:0 30px;
    border-radius: 3em;
    font-weight: 100;
    border:1px solid #000;
    color:#000;
    &.blue{
      border:1px solid #2b6ffa;
      color:#2b6ffa;
    }
    &.white{
      border: 1px solid #fff;
      color:#fff;
    }
  }
}
.page1{
  background:url(/images/pc/v2/banner1bg.jpg) no-repeat  center 100px / 100% 518px;
  .title{
    font-size: 60px;
    padding-bottom: 13px;
    border-bottom: 1px solid #fff;
    display: inline-block;
    position: relative;
    color:#fff;
  }
  &.cur{
    .lb{
      opacity: 1;
    }
  }
  h2{
    padding-left: 48px;
  }
  a.btn{
    display: none;
  }
  p{
    line-height: 1.7;
  }
  .triangle{
    display: block;
    width: 80%;
    height: 100%;
    position: absolute;
    top:60px;
    left:0px;
    background: #fff;
    background:linear-gradient(45deg,#f2f2f2 50%,#fff 0);
  }
  .lb{
    background:url(/images/pc/v2/banner1text.png) no-repeat top right;
    width: 840px;
    height: 380px;
    padding-top: 140px;
    position: absolute;
    left:50%;
    margin-left: -420px;
    top: 100px;
    opacity: 0;
    text-align: left;
    @include transition(all 0.3s ease-in 0s);
    color:#fff;
    p{
      padding-top: 15px;
      font-size: 44px;
    }
    .logo{
      width: 72px;
      position: absolute;
      top:155px;
      left:160px;
    }
  }
  .rb{
    height: 250px;
    position: absolute;
    left:730px;
    top:50%;
    margin-top: -230px;
    // opacity: 0;
    @include transition(all 0.5s ease-in 0.5s);
    color:#fff;
  }
  .bb{
    background-color: rgba(255,255,255,0.3);
    position: absolute;
    bottom:0;
    padding-bottom: 88px;
    width: 100%;
    text-align: center;
    color:#505558;
    .title1{
      font-size: 44px;
      padding-bottom: 40px;
    }
    .row{
      font-size: 18px;
      span{
        margin:0 30px;
      }
      em{
        font-size: 30px;
        color:#2b6ff2;
      }
    }
  }
}

.page2{
  background: url(/images/pc/v2/banner2.jpg) no-repeat  center center / cover;
  .cell{
    display: inline-block;
    width: 25%;
    color:#fff;
    img{width: 79px;margin-bottom: 5px;margin-top: 15px;}
  }
}

h2,h3{
  font-size: 44px;
  padding-bottom: 18px;
}

.cb{
    position: absolute;
    width: 750px;
    height: 600px;
    top:50%;
    left:50%;
    margin-top: -260px;
    margin-left: -375px;
    font-size: 18px;
    color:#fff;
    
    .understand{
      color:#aff7c5;
      font-size:18px;
      padding:5px 20px;
      display: inline-block;
      position: relative;
      border-radius: 3em;
      border:1px solid #fff;
      margin-bottom:55px;
      font-weight: 100;
      &:before{
        content: "";
        width: 100px;
        height: 1px;
        position: absolute;
        background-color: #fff;
        right:-130px;
        top:15px;
      }
      &:after{
        content: "";
        width: 100px;
        height: 1px;
        position: absolute;
        background-color: #fff;
        left:-130px;
        top:15px
      }
    }
    
  }
.icon-right{
  width: 23px;
  margin:0 12px;
}
.page3{
  .cb{
    width: 960px;
    margin-left: -480px;
    color:#000;
    h2,h3{
      color:#505558;
    }
    .understand{
      color:#fff;
      border: none;
      background-color: #2a70ff;
    }
  }

  .lb,.rb{
    display: inline-block;
    margin:0 15px;
    padding:0 10px;
    .tb{
      margin-bottom: 30px;
    }
    .bb{
      display: flex;
      justify-content: center;
      align-items:center;
    }
  }
  img{
    margin:0 30px;
    position: relative;
    top: 5px;
  }
}
.page4{
  background: url(/images/pc/v2/banner4.jpg) no-repeat  center center / cover;
  text-align: left;
  h2,h3{
    color:#fff;
  }
  .lb{
    width: 620px;
    height: 420px;
    position: absolute;
    left:50px;
    top:50%;
    margin-top: -210px;
  }
  .rb{
    position: absolute;
    left:700px;
    top:50%;
    margin-top:-100px;
    .baobiao1,.baobiao2{
      position: absolute;
      @include box-shadow(5px 5px 5px 5px rgba(0,0,0,0.2));
      @include transition(all 1s ease 0s);
      &.cur{
        z-index: 2;
        @include transform(scale(1.1));
      }
    }
    .baobiao1{
      top:-100px;
      left:80px;
      z-index: 1;
    }
    .baobiao2{
      top:0px;
      left:50px;
      z-index: 1;

    }
  }
  .cell{
    color:#fff;
    display: inline-block;
    margin-right:29px;
  }
  .btn{
    border:none;
    color:#fff;
    border-radius: 5px;
    margin-bottom: 35px;
    margin-top: 65px;
    padding:10px 25px;
  }
  .light-blue{
    background-color: #2a70fe;
  }
  .dark-blue{
    background-color: #4548ce;
  }
}

.page5{
  background: url(/images/pc/v2/banner6.jpg) no-repeat  center center / cover;
  &.cur{
    .lb img{
      opacity: 1;
    } 
  }
  .cb{
    width: 1100px;
    margin-left: -550px;
  }
  .understand{
    color:#fff;
    border: none;
    background-color: #2a70ff;
    margin-left: -10px;
    &:before,&:after{
      background-color: transparent;
    }
  }
  .row{
    display: flex;
    justify-content: center;
    align-items:center;
  }
  .lb{
    img{
      opacity: 0;
      @include transition(all 2s ease 0s);
    }
  }
  .lb,.rb{display: inline-block;text-align: left;margin:0 20px;font-weight: 100;position: relative;}
  .rb{
    
    &:after{
      content: "";
      width: 5px;
      height: 5px;
      background-color: #fff;
      border-radius: 50%;
      position: absolute;
      top:10px;
      left:-20px;
    }
  }
}
.page6{
  .cb{
    width: 100%;
    left:auto;
    margin: 0 auto;
    position: relative;
    height: 450px;
    top:50%;
    margin-top: -250px;
    display: flex;
    justify-content: center;
    align-items:center;
    flex-direction: column;
    .tb{
      margin-bottom: 100px;
    }
    h2,h3{
      font-size: 44px;
      color:#000;
    }
    h2 em{
      color:#777;
    }
    h3 em{
      color:#777;
      position: relative;
      display: inline-block;
      font-weight: 900;
      font-size: 66px;
      &:after{
        position: absolute;
        content: "";
        height: 2px;
        background-color: #777;
        bottom:-10px;
        width: 100%;
        left:0;
      }
    }
  }
}
.page7{
  letter-spacing: inherit;
}
.pageWX{
  h2,h3{
    color:#505558;
  }
  .cb{
    width: 1100px;
    margin-left: -550px;
  }
  .understand{
    color:#fff;
    border: none;
    background-color: #2a70ff;
  }
  .row{
    padding-top: 40px;
  }
}
