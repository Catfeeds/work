@import 'compass/css3';
.system-info{
  padding-top: 200px;
  margin-bottom: 250px;
  .lb{
    display: inline-block;
    width: 660px;
  }
  .rb{
    margin-top: 40px;
    display: inline-block;
    width: 460px ;
    border: 8px solid #f5f5f5;
    position: absolute;
    right: 0;
    top:200px;
    .menu{
      width: 100%;
      height: 10px;
      position: absolute;
      bottom: -30px;
      left:0;
      ul{
        width: 100%;
        padding:0;
        margin: 0;
        li{
          display: inline-block;
          margin-right:3px;
          width: 6px;
          height: 6px;
          border-radius: 50%;
          background-color: #ddd;
          &.cur{
            border: 1px solid #2b6ffe;
            background-color: #fff;
            width: 4px;
            height: 4px;
          }
        }
      }

    }
    .album{
      width: 460px;
      height: 220px;
      overflow: hidden;
      position: relative;
      ul{
        padding:0;
        font-size: 0;
        li{
          margin: 0;
          width: 460px;
          padding:0;
          display: inline-block;
        }
      }
    }
  }
}

.channel-info{
  height: 390px;
  padding-top: 100px;
  padding-left: 720px;
  .lb{
    position: absolute;
    top:0;
    left: 0;
    width: 640px;
  }
}

.wechat-info{
  padding-top: 100px;
  height: 390px;
  .rb{
    width: 640px;
    position: absolute;
    right:0;
    top:100px;
  }
  .lb{
    padding-top: 50px;
    position: relative;
    z-index: 99;
  }
}

.hardware-info{
  padding-top: 200px;
  padding-bottom: 120px;
  .tb{
    padding-bottom: 80px;
  }
  .bb{
    font-size: 0;
    .imgbox{
      display: inline-block;
      width: 280px;
      height: 92px;
      overflow: hidden;
      margin-right: 20px;
      img{
        width: 92px;
        margin: 0 auto;
      }
    }
    .textbox{
      width: 280px;
      display: inline-block;
      margin-right: 20px;
      font-size: 16px;
      color:#000;
      padding-top: 14px;
      text-align: center;
    }
  }
}

.wechat-report{
  height: 500px;
  padding-top: 200px;
  .lb{
    width: 730px;
    height: 360px;
    border:10px solid #f5f5f5;
    position: absolute;
    z-index: 9;
    left:0;
    top:200;
    span{
      font-size: 16px;
      position: absolute;
      left:24px;
      bottom:24px;
    }
    #menuSp{
      width: 100%;
      height: 10px;
      position: absolute;
      bottom: -30px;
      left:0;
      ul{
        width: 100%;
        padding:0;
        margin: 0;
        li{
          display: inline-block;
          margin-right:3px;
          width: 6px;
          height: 6px;
          border-radius: 50%;
          background-color: #ddd;
          &.cur{
            border: 1px solid #2b6ffe;
            background-color: #fff;
            width: 4px;
            height: 4px;
          }
        }
      }
    }
    ul#carouselSp{
      width: 100%;
      height: 100%;
      position: relative;
      @include perspective(600px);
      li{
        width: 250px;
        position: absolute;
        left:150px;
        top:50%;
        @include transform(translateY(-50%));
        z-index: 999;
        box-shadow: 5px 5px 15px 0px rgba(#2b6ffe,0.2);
        @include transition(all 1s linear 0s);
        &.cur{
          z-index: 99;
          @include transform(translate3d(75px,-50%,0) scale(0.8));
          box-shadow: none;
        }
      }
    }
  }
  .rb{
    position: absolute;
    z-index: 99;
    top:250px;
    left:580px;
  }
}

.page{
  &.text-center{
    text-align: center;
  }
  position: relative;
  img{
    width: 100%;
  }
  h3,h2{
    padding-bottom: 26px;
    font-size: 24px;
    color:#2b6ffe;
  }
  h2{
    font-size: 40px;
  }
  p{
    color:#000;
    font-size: 18px;
    line-height: 1.4;
    margin-bottom: 10px;
  }
  ul{
    font-size: 18px;
  }
  li{
    margin-bottom: 10px;
    color:#000;
  }
}