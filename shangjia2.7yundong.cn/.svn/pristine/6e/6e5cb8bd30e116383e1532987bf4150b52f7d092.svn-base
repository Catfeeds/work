@import 'compass/css3';
@import '../../include/sj-color';
.daterangepicker.dropdown-menu{
  z-index: 20000001 !important;
  width: auto;
}
.activity-tab{
  display: inline-block;
  margin:20px;
  margin-left:0;
  margin-right:60px;
  margin-bottom: 30px;
  cursor:pointer;
  &.cur{
    color:$mainBlue;
  }
}
.table.table-bordered tbody tr td,{
  font-size: 16px !important;
  color:#222;
  em{
    font-size: 12px;
    display: inline-block;
    border-radius: 3em;
    color:#fff;
    background-color: $mainBlue;
    padding:0 5px;
    margin-right: 5px;
    vertical-align: text-bottom;
  }
  span{
    color:$mainBlue;
    margin:0 5px;
    cursor:pointer;
  }
}
.table.table-bordered thead tr{
  background-color:#eff3f5;  
}
.table-hover>tbody>tr:hover {
    background-color: #ecf4fc;
}
.court-join{
  top:30%;
  .content{
    height: 500px;
    overflow: auto;
  }
  .p-btn{
    margin-top: 0;
  }
}
.time-select{
  width: 160px;
  display: inline-block;
  &.large{
    width: 260px;
  }
}
.sj-select-lb i {
  color:#666;
}
.sj-select {
    width:100%;
    display: inline-block;
    height: 36px;
    line-height: 36px;
    border-color: #ddd;
    color: #222;
}
input[daterangepicker] {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.01;
    width: 100%;
    height: 100%;
    cursor: pointer;
}
.time-select-bar{
  margin: 10px auto;
}
#courtJoin{
  color:#222;
  .c{
    color: #666;
  }
  input{
    width:auto;
    height: auto;
  }
  label{
    width: auto;
    margin-right: 10px;
  }
  span{
    margin-right: 10px;
  }
  select{
    margin-right: 10px;
    background-color: #fff;
    border:1px solid #e5e9ef;
    border-radius: 5px;
    padding:2px;
    display: inline-block;
    height: 36px;
    min-width: 80px;
  }
  input{
    margin-right: 10px;
  }
  textarea{
    width: 100%;
    background-color: #f5f5f9;
    border:1px solid #e5e9ef;
    padding: 10px;
  }
  #averagePrice{
    width:60px;
    height: 36px;
  }
  #addCoutrTimeSelect{
    margin-right: 10px;
  }
  #weekday{
    margin-right: 40px;
  }
  .p-radio{
    text-align: left;
    text-indent: 40px;
    label{
      text-indent: 0;
      margin-right: 40px;
    }
  }
  #courtJoinSelectCourt{
    position: relative;
    label{
      position: absolute;
      top:8px;
      left:0;
    }
    ul{
      padding-left:42px; 
      li{
        margin-bottom: 16px;
      }
    }
  }
}
.user-list-header{
  color:#666;
  border-bottom: 1px solid #e5e9ef;
  padding-right: 10px;
  .user-list-header-name{
    width: 33.3%;
    display: inline-block;
    text-align: center;
    padding-bottom: 20px;
  }
}
.user-list{
  height: 300px;
  overflow: auto;
  padding-top: 30px;
  li{
    line-height: 60px;
    margin-bottom: 20px;
    position: relative;
    >div {
      width: 33%;
      display: inline-block;
      text-align: center;
      
    }
  }
  img{
    position: absolute;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: 1px solid #e5e9ef;
    overflow: hidden;
    top:0;
    left:0;
  }
  .l{text-align: left;}
  .r{text-align: right;}
}
#copyUrl{
  height: 1px;
  opacity: 0.01;
  cursor:default;
}
[disabled],[readonly]{
  cursor: not-allowed;
}
.settle{
  margin-bottom: 30px;
  margin-top: 20px;
  em{
    margin-right: 30px;
  }
}
#userMoney em {
  color:$mainBlue;
}